doctype html
html(lang="en")
	head
	title #{title}
	script(type="text/javascript", src="javascripts/jquery-2.0.2.min.js")
	script(type="text/javascript", src="javascripts/jquery-ui-1.10.3.min.js")
	script(type="text/javascript", src="javascripts/knockout-2.2.1.js")
